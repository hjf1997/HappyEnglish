<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_round_corner"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

  <TextView
      android:text="Title"
      android:textSize="15dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_chapter_name_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="10dp"
        android:textColor="#FFDE03"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:text="Progress"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView_chapter_progress_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60%"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="#FFDE03"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:text="Difficulty"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView_chapter_difficulty_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amazing"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="#FFDE03"
                />


        </LinearLayout>



    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/button_start_chapter"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_round_corner"
        android:textColor="#FFFFFF"
        android:text="Start"/>



</LinearLayout>